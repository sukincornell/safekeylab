# Aegis Shield Environment Configuration
# Copy this file to .env and update with your values

# API Configuration
AEGIS_API_URL=https://api.your-domain.com
AEGIS_API_KEY=your-api-key-here

# OAuth Configuration
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret

GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# SSO Configuration
SSO_ENDPOINT=https://sso.your-company.com
SSO_CLIENT_ID=your-sso-client-id
SSO_CLIENT_SECRET=your-sso-client-secret

# Analytics
GA_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
ENABLE_BETA_FEATURES=false
ENABLE_ANALYTICS=true
ENABLE_REAL_TIME_MONITORING=true

# Security
SESSION_TIMEOUT_MINUTES=60
ENFORCE_MFA=false
ALLOWED_ORIGINS=https://your-domain.com,https://app.your-domain.com

# Deployment
ENVIRONMENT=production
CDN_URL=https://cdn.your-domain.com
VERSION=2.0.0