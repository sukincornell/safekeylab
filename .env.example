# Aegis Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_NAME=Aegis
DEBUG=false
SECRET_KEY=change-this-to-a-random-secret-key-use-openssl-rand-hex-32

# API Configuration
API_PREFIX=/v1
BASE_URL=http://localhost:8000

# Database
DATABASE_URL=postgresql://aegis:aegis-secure-password@postgres:5432/aegis

# Redis
REDIS_URL=redis://:aegis-redis-password@redis:6379/0

# Rate Limiting
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_PERIOD=60

# ML Models
MODEL_CACHE_DIR=/tmp/aegis_models
PII_MODEL=microsoft/deberta-v3-base
CONFIDENCE_THRESHOLD=0.85

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,https://aegis-shield.ai
ALLOWED_HOSTS=*

# Stripe (Optional - for payment processing)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=

# Monitoring (Optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=true

# Grafana
GRAFANA_PASSWORD=admin